  </servlet>
  <servlet-mapping>
    <servlet-name>OfferController</servlet-name>
    <url-pattern>/offers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddOffer</servlet-name>
    <servlet-class>controller.AddOffer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddOffer</servlet-name>
    <url-pattern>/adminruslan/addoffer</url-pattern>
